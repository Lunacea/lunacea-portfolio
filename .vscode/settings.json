{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "search.exclude": {
    "package-lock.json": true
  },

  // TypeScript
  "typescript.tsdk": "node_modules/typescript/lib", // Use the workspace version of TypeScript
  "typescript.enablePromptUseWorkspaceTsdk": true, // For security reasons it's require that users opt into using the workspace version of typescript

  "typescript.preferences.autoImportFileExcludePatterns": [
    // useRouter should be imported from `next/navigation` instead of `next/router`
    "next/router.d.ts",
    "next/dist/client/router.d.ts",
    // give priority for Link to next/link instead of lucide-react
    "lucide-react"
  ],
  "typescript.preferences.preferTypeOnlyAutoImports": true, // Prefer type-only imports

  // Vitest
  "testing.automaticallyOpenTestResults": "neverOpen", // Don't open the test results automatically

  // I18n
  "i18n-ally.localesPaths": ["src/shared/locales"],
  "i18n-ally.keystyle": "nested",

  // Disable the default formatter, use ESLint instead
  "prettier.enable": false,
  "editor.formatOnSave": false,

  // Auto fix with ESLint on save
  "editor.codeActionsOnSave": [
    "source.addMissingImports",
    "source.fixAll.eslint"
  ],

  // Enable eslint for all supported languages
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss",
    "github-actions-workflow"
  ],

  // MDX設定 - 数式記法のサポート
  "mdx.validate": false,
  "mdx.experimental.parser": "acorn",
  "mdx.experimental.parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "allowAwaitOutsideFunction": true,
    "allowHashBang": true,
    "allowReturnOutsideFunction": true,
    "allowSuperOutsideMethod": true,
    "allowUnparenthesizedArrow": true,
    "allowReserved": true,
    "allowReservedWords": true
  },
  // MDX拡張機能の診断を完全に無効化（数式記法の誤検出を防ぐ）
  "mdx.experimental.diagnostics": false,
  "mdx.experimental.syntaxHighlighting": false,
  // MDXファイルの診断を無効化
  "files.associations": {
    "*.mdx": "markdown"
  },
  "cSpell.words": [
    "Agri",
    "ajkey",
    "animejs",
    "antiscript",
    "aquasecurity",
    "ARCJET",
    "AUTOPLAY",
    "buildx",
    "bunx",
    "cand",
    "Cascadia",
    "checkly",
    "classdiagram",
    "conventionalcommits",
    "Cooooster",
    "elif",
    "eslintcache",
    "figcaption",
    "Fira",
    "gantt",
    "GIIKU",
    "Hackathon",
    "Hiragino",
    "infty",
    "Iwate",
    "Kaku",
    "katex",
    "KHTML",
    "LOGTAIL",
    "lunacea",
    "mathcal",
    "mathdefault",
    "mbin",
    "mclose",
    "Meiryo",
    "mopen",
    "mord",
    "mpunct",
    "mrel",
    "navigations",
    "Neue",
    "Nextdotjs",
    "nixpacks",
    "nobg",
    "Nodedotjs",
    "Noll",
    "Noto",
    "oklch",
    "opengraph",
    "Orbitron",
    "Pkgs",
    "pmatrix",
    "POSTHOG",
    "rajdhani",
    "rehype",
    "rgba",
    "Roboto",
    "sarif",
    "Segoe",
    "sequencediagram",
    "shiki",
    "sigstore",
    "spotlightjs",
    "Takizawa",
    "tohoku",
    "tripcode",
    "Vuedotjs",
    "WCAG"
  ],

  // GitHub Actions - バリデーション設定（Context access警告を抑制）
  "github-actions.validation.enabled": false,
  "github-actions.validation.secrets": false,
  "github-actions.validation.variables": false,
  "github-actions.validation.workflows": false,
  "github-actions.validation.context": false,
  "github-actions.validation.actions": false,
  // その他のリンター設定
  "yaml.validate": false,
  "yaml.schemas": {},
  // 診断設定
  "problems.decorations.enabled": false,
  "editor.showUnused": false,
  "typescript.showUnused": false,
  // markdownlintの設定 - MDXファイルでJSXを許可
  "markdownlint.config": {
    "MD033": false,  // inline HTMLを許可（MDXではJSXが正常）
    "MD009": false,  // trailing spacesを許可
    "MD036": false,  // emphasis as headingを許可
    "MD047": false   // single trailing newlineを許可
  },
  // 追加の警告抑制設定
  "yaml.customTags": [],
  "yaml.completion": false,
  "yaml.hover": false,
  // 完全な警告抑制
  "yaml.disableAdditionalProperties": false,
  "yaml.format.enable": false,
  "yaml.format.singleQuote": false,
  "yaml.format.bracketSpacing": false,
  "yaml.format.proseWrap": "preserve",
  "yaml.format.printWidth": 80,
  "yaml.format.tabSize": 2,
  "yaml.format.useTabs": false,
  "yaml.format.insertFinalNewline": false,
  "yaml.format.trimTrailingWhitespace": false
}
{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "search.exclude": {
    "package-lock.json": true
  },

  // TypeScript
  "typescript.tsdk": "node_modules/typescript/lib", // Use the workspace version of TypeScript
  "typescript.enablePromptUseWorkspaceTsdk": true, // For security reasons it's require that users opt into using the workspace version of typescript

  "typescript.preferences.autoImportFileExcludePatterns": [
    // useRouter should be imported from `next/navigation` instead of `next/router`
    "next/router.d.ts",
    "next/dist/client/router.d.ts",
    // give priority for Link to next/link instead of lucide-react
    "lucide-react"
  ],
  "typescript.preferences.preferTypeOnlyAutoImports": true, // Prefer type-only imports

  // Vitest
  "testing.automaticallyOpenTestResults": "neverOpen", // Don't open the test results automatically

  // I18n
  "i18n-ally.localesPaths": ["src/shared/locales"],
  "i18n-ally.keystyle": "nested",

  // Disable the default formatter, use ESLint instead
  "prettier.enable": false,
  "editor.formatOnSave": false,

  // Auto fix with ESLint on save
  "editor.codeActionsOnSave": [
    "source.addMissingImports",
    "source.fixAll.eslint"
  ],

  // Enable eslint for all supported languages
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss",
    "github-actions-workflow"
  ],
  "cSpell.words": [
    "ajkey",
    "animejs",
    "aquasecurity",
    "ARCJET",
    "AUTOPLAY",
    "buildx",
    "bunx",
    "checkly",
    "conventionalcommits",
    "elif",
    "eslintcache",
    "gantt",
    "Hackathon",
    "LOGTAIL",
    "lunacea",
    "Nextdotjs",
    "nixpacks",
    "Nodedotjs",
    "Noll",
    "Pkgs",
    "POSTHOG",
    "sarif",
    "shiki",
    "sigstore",
    "spotlightjs",
    "tohoku",
    "tripcode",
    "Vuedotjs"
  ],

  // GitHub Actions - バリデーション設定（Context access警告を抑制）
  "github-actions.validation.enabled": false,
  "github-actions.validation.secrets": false,
  "github-actions.validation.variables": false,
  "github-actions.validation.workflows": false,
  "github-actions.validation.context": false,
  "github-actions.validation.actions": false,
  // その他のリンター設定
  "yaml.validate": false,
  "yaml.schemas": {},
  // 診断設定
  "problems.decorations.enabled": false,
  "editor.showUnused": false,
  "typescript.showUnused": false,
  // 追加の警告抑制設定
  "yaml.customTags": [],
  "yaml.completion": false,
  "yaml.hover": false,
  // 完全な警告抑制
  "yaml.disableAdditionalProperties": false,
  "yaml.format.enable": false,
  "yaml.format.singleQuote": false,
  "yaml.format.bracketSpacing": false,
  "yaml.format.proseWrap": "preserve",
  "yaml.format.printWidth": 80,
  "yaml.format.tabSize": 2,
  "yaml.format.useTabs": false,
  "yaml.format.insertFinalNewline": false,
  "yaml.format.trimTrailingWhitespace": false
}